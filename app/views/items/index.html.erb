<div class="button">
    <%= link_to "Create new item", new_item_path, class: "btn btn-primary" %>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">


        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>
                    Units Ordered
                </th>
                <th>
                    Wanna Edit?
                </th>
            </tr>
            <% @items.each do |item| %>
            <tr class="text-center">
                <td>
                    <%= item.title %>
                </td>
                <td>
                    <%= item.description %>
                </td>
                <td>
                    <%= item.category %>
                </td>
                <td>
                    <%=  number_to_currency(item.price/100.0) %>
                </td>
                <td>
                    <%= item.orders.sum(:quantity) %>

                </td>
                <td>
                    <%= link_to "EDIT", edit_item_path(id: item.id), class: "btn btn-info" %>
                </td>

            </tr>
            <% end %>
        </table>
    </div>
</div>
