<div class="row">
    <div class="col-md-10 col-md-offset-1">


        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>
                    Units Ordered
                </th>
            </tr>
            <% @items.each do |item| %>
            <tr class="text-center">
                <td>
                    <%= item.title %>
                </td>
                <td>
                    <%= item.description %>
                </td>
                <td>
                    <%= item.category %>
                </td>
                <td>
                    <%=  item.price %>
                </td>
                <td>
                    <%= item.orders.sum(:quantity) %>
                </td>

            </tr>
            <% end %>
        </table>
    </div>
</div>
